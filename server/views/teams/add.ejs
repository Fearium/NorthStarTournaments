<% include ../partials/header.ejs %>
    <% include ../partials/navbar.ejs %>
        <main class="container">
            <div class="row">
                <div class="col-md-offset-3 col-md-6">
                    <h1>Create a Tournament</h1>
                    <form method="post">

                        <!-- Team Name -->
                        <fieldset class="form-group">
                            <label for="name">Team Name: *</label>
                            <input type="text" name="teamname" class="form-control" required />
                        </fieldset>


                                <!-- Team Member Name List -->
                               <div class="form-group">
                                    <div class="input-group">
                                        <input type="text" name="player1" class="form-control" placeholder="Member Name" required/>
                                        <span class="input-group-addon">-</span>
                                        <input type="text" name="player2" class="form-control" placeholder="Member Name" required/>
                                    </div>
                                </div>
                                
                                <div class="form-group">
                                    <div class="input-group">
                                        <input type="text" name="player3" class="form-control" placeholder="Member Name" required/>
                                        <span class="input-group-addon">-</span>
                                        <input type="text" name="player4" class="form-control" placeholder="Member Name" required/>
                                    </div>
                                </div>
                                
                                <div class="form-group">
                                    <div class="input-group">
                                        <input type="text" name="player5" class="form-control" placeholder="Member Name" required/>
                                        <span class="input-group-addon">-</span>
                                        <input type="text" name="player6" class="form-control" placeholder="Member Name" required/>
                                    </div>
                                </div>

                        <fieldset class="form-group text-right">
                            <button type="submit" class="btn btn-success">Submit</button>
                            <a href="/teams">
                                <input type="button" class="btn btn-warning" value="Cancel" />
                            </a>
                        </fieldset>
                    </form>
                </div>
            </div>


        </main>
